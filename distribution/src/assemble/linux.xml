<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>linux</id>
	<formats>
		<format>tar.gz</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>target/resources/ReleaseNotes.txt</source>
			<outputDirectory>doc</outputDirectory>
			<destName>ReleaseNotes.txt</destName>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>../owlcms/target/owlcms-${project.version}</directory>
			<includes>
				<include>**</include>
			</includes>
			<outputDirectory>owlcms</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../launch/src/main/scripts</directory>
			<includes>
				<include>go</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../owlcms/doc</directory>
			<includes>
				<include>*.pdf</include>
				<include>*.txt</include>
				<include>*.xls</include>
			</includes>
			<outputDirectory>doc</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../owlcms/doc/Guides</directory>
			<includes>
				<include>*.pdf</include>
				<include>*.txt</include>
				<include>*.xls</include>
			</includes>
			<outputDirectory>doc</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../launch/target/lib</directory>
			<includes>
				<include>**</include>
			</includes>
			<outputDirectory>lib</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>