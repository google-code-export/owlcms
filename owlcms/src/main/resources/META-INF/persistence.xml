<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
              http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
              
	<persistence-unit name="owlcms-embedded" transaction-type="RESOURCE_LOCAL">
		<!-- Hibernate with Embedded Derby -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="hibernate.archive.autodetection" value="class" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.url" value="jdbc:derby:target/database/owlcms;create=true" />
			<property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect" />
			<property name="hibernate.connection.username" value="user" />
			<property name="hibernate.connection.password" value="password" />
			<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory"/>
			<property name="hibernate.cache.use_second_level_cache" value="true" />
			<property name="hibernate.cache.use_query_cache" value="true" />
		</properties>
	</persistence-unit>
	
	<!-- fake unit, used to provoke a clean shutdown - - MUST MATCH URL above -->
	<persistence-unit name="owlcms-embedded-shutdown" transaction-type="RESOURCE_LOCAL">
		<!-- Hibernate with Embedded Derby -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="hibernate.connection.url" value="jdbc:derby:target/database/owlcms;shutdown=true" />
			<property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect" />
			<property name="hibernate.connection.username" value="user" />
			<property name="hibernate.connection.password" value="password" />
		</properties>
	</persistence-unit>	

	<persistence-unit name="owlcms-inmemory" transaction-type="RESOURCE_LOCAL">
		<!-- Hibernate with Derby in-memory -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="hibernate.archive.autodetection" value="class" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.url" value="jdbc:derby:memory:testDb;create=true" />
			<property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect" />
			<property name="hibernate.connection.username" value="user" />
			<property name="hibernate.connection.password" value="password" />
			<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory"/>
			<property name="hibernate.cache.use_second_level_cache" value="true" />
			<property name="hibernate.cache.use_query_cache" value="true" />			
		</properties>
	</persistence-unit>
	
	<!-- fake unit, used to provoke a clean shutdown - - MUST MATCH URL above -->
	<persistence-unit name="owlcms-inmemory-shutdown" transaction-type="RESOURCE_LOCAL">
		<!-- Hibernate with Derby in-memory -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="hibernate.connection.url" value="jdbc:derby:memory:testDb;shutdown=true" />
			<property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect" />
			<property name="hibernate.connection.username" value="user" />
			<property name="hibernate.connection.password" value="password" />
		</properties>
	</persistence-unit>
	
</persistence>